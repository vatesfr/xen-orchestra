        | &nbsp;
        i.xo-icon-pool
      | &nbsp;
      | &nbsp;
      i(tooltip="{{hosts.size}} hosts").hidden-xs
        i.small {{hosts.size}}x
        | &nbsp;
        i.xo-icon-host
      | &nbsp;
      | &nbsp;
