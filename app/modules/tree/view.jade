        i.small {{runningVms.size}}x
        | &nbsp;
        i.xo-icon-vm
      | &nbsp;
      | &nbsp;
      i(tooltip="{{stats.$vCPUs}} vCPUs used of {{stats.$CPUs}} CPUs")
        i.small {{stats.$vCPUs}}x
        | &nbsp;
        i.xo-icon-cpu
      | &nbsp;
      | &nbsp;
