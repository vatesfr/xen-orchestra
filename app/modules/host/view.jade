  .panel.panel-default
    .panel-heading.panel-title(ng-if="tasks | isNotEmpty")
      i.fa.fa-spinner.fa-pulse
      |  Pending tasks
    .panel-heading.panel-title(ng-if="tasks | isEmpty")
      i.fa.fa-spinner
      |  Pending tasks
    .panel-body
