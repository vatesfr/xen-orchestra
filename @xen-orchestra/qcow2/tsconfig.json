{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",

    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "es2022",
    "skipLibCheck": true,
    "types": ["node"], // Only use types from Node.js and packages that are explicitly imported
    "declaration": true // Generates `.d.ts` files for type safety
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules", "./dist"]
}
