{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",

    "strict": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "skipLibCheck": true,

    "resolveJsonModule": true,

    /* Experimental options */
    "experimentalDecorators": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules", "./dist"]
}
