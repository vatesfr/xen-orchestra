{
  "entryFile": "./src/index.mts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["./src/**/*.controller.mts"],
  "spec": {
    "outputDirectory": "./open-api/spec",
    "specVersion": 3,
    "basePath": "/rest/v0",
    "securityDefinitions": {
      "token": {
        "type": "apiKey",
        "name": "authenticationToken",
        "in": "cookie"
      }
    }
  },
  "routes": {
    "routesDir": "./src/open-api/routes",
    "esm": true,
    "middleware": "express",
    "basePath": "/rest/v0",
    "authenticationModule": "./src/middleware/authentication.middleware.mts",
    "iocModule": "./src/ioc/ioc.mts"
  }
}
