{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputMode": "errors-only",
      "outputs": ["dist/**", "!.dist/cache/**"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "persistent": true
    },
    "test": {
      "dependsOn": ["build"],
      "outputMode": "errors-only"
    }
  }
}
