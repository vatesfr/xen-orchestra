{{#each snapshotSubtasks}}
  <mj-section padding="0px">
    <mj-column width="100%">
      <mj-text font-size="16px" font-weight="300" line-height="24px">
        <ul><li><span style="font-weight: bold">Snapshot</span> {{getIcon subTaskLog.status}}</li></ul>
      </mj-text>
    </mj-column>
  </mj-section>

  <mj-section padding="0px">
    <mj-column width="85%" border="1px solid">
      <mj-text font-size="16px" font-weight="300" line-height="24px">
        {{>reportTemporalDataMjml end=subTaskLog.end start=subTaskLog.start formatDate=../formatDate}}
      </mj-text>
    </mj-column>
  </mj-section>
{{/each}}

{{#if srsSubTasks}}

  <mj-section padding="0px">
    <mj-column width="100%">
      <mj-text font-size="16px" font-weight="300" line-height="24px">
        <ul><li><span style="font-weight: bold">SRs</span></li></ul>
      </mj-text>
    </mj-column>
  </mj-section>

  {{#each srsSubTasks}}
    {{>vmSubTaskMjml formatDate=../formatDate}}
  {{/each}}
{{/if}}

{{#if remotesSubTasks}}
  <mj-section padding="0px">
    <mj-column width="100%">
      <mj-text font-size="16px" font-weight="300" line-height="24px">
        <ul><li><span style="font-weight: bold">Remotes</span></li></ul>
      </mj-text>
    </mj-column>
  </mj-section>

  {{#each remotesSubTasks}}
    {{>vmSubTaskMjml formatDate=../formatDate}}
  {{/each}}
{{/if}}
